<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

  <record id="epa_stock_request_order_custom_form" model="ir.ui.view">
    <field name="name">stock.request.order.form</field>
    <field name="model">stock.request.order</field>
    <field name="inherit_id" ref="stock_request.stock_request_order_form" />
    <field name="arch" type="xml">
      <xpath
                expr="//field[@name='stock_request_ids']/tree/field[@name='product_uom_qty']"
                position="after"
            >
        <field name="price_subtotal" />
      </xpath>


      <xpath expr="//field[@name='stock_request_ids']" position="after">

          <strong>Valor Total: <field
                        name="price_total"
                        style="float: right; text-align: right"
                    />
          </strong>

      </xpath>

    </field>
  </record>
</odoo>
