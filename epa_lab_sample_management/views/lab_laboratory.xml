<odoo>

    <record model="ir.ui.view" id="lab_laboratory_form_view">
        <field name="name">lab.laboratory.form (in epa_lab_sample_management)</field>
        <field name="model">lab.laboratory</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <group>
                        <field name="name" />
                    </group>
                </sheet>
                <div class="oe_chatter" />
            </form>
        </field>
    </record>


    <record model="ir.ui.view" id="lab_laboratory_tree_view">
        <field name="name">lab.laboratory.tree (in epa_lab_sample_management)</field>
        <field name="model">lab.laboratory</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="lab_laboratory_act_window">
        <field name="name">Laboratory</field>
        <field name="res_model">lab.laboratory</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Laboratory
            </p>
        </field>
    </record>

</odoo>
